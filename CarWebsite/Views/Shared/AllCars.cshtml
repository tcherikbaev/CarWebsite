@model Car


<div class="col-lg-4">
    <img class="img-thumbnail" src="@Model.img" alt="@Model.Name" />
    <h2>Model :@Model.Name</h2>
    <p>@Model.shortDesc</p>
    <p>Price: @Model.prize.ToString("c")</p>
    <p><a class="btn btn-secondary" asp-controller="ShopCart" asp-action="addToCart" asp-route-id="@Model.id">AddInShopCart</a></p>
</div>